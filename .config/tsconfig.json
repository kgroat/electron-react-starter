{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strictNullChecks": true,
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "baseUrl": "../src",
    "paths": {
      "components": ["./components"],
      "containers": ["./containers"],
      "actions": ["./redux/actions"],
      "state": ["./redux/state"]
    }
  },
  "include": [
    "../src",
    "../app"
  ],
  "exclude": [
    "./node_modules",
    "./**/__tests__/*",
    "./**/*.spec.*"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}