{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015"
  },
  "include": [
    "../src"
  ],
  "exclude": [
    "./node_modules",
    "./**/__tests__/*",
    "./**/*.spec.*"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}